# Base URL for the API endpoints
# Development: http://localhost:5000
# Production: https://your-api.azurewebsites.net
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# Flag to indicate if the API is configured and ready
# Set to 'true' when your API endpoints are ready to use
# Set to 'false' to force mock mode
NEXT_PUBLIC_API_CONFIGURED=false

# Test user email for development
# In production, this would be replaced with actual user authentication
NEXT_PUBLIC_TEST_USER=testuser@myapp.com

# API Key for authentication
NEXT_PUBLIC_API_KEY=1234 